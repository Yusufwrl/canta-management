generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Product {
  id                  String   @id @default(cuid())
  code                String   @unique
  name                String
  brand               String
  color               String
  category            String
  model               String
  description         String?
  purchasePrice       Float
  salePrice           Float
  suggestedSalePrice  Float?
  images              String?
  inStock             Boolean  @default(true)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  transactions        Transaction[]
  
  @@map("products")
}

model Transaction {
  id          String   @id @default(cuid())
  type        String
  amount      Float
  description String
  category    String?
  productId   String?
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  
  product     Product? @relation(fields: [productId], references: [id])
  
  @@map("transactions")
}

model Category {
  id           String @id @default(cuid())
  name         String @unique
  description  String?
  productCount Int    @default(0)
  
  @@map("categories")
}
